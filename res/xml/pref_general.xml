<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/pref_header_general" >
    

        <!-- NOTE: EditTextPreference accepts EditText attributes. -->
        <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
        
        <EditTextPreference
            android:defaultValue="@string/pref_default_height"
            android:inputType="number"
            android:key="height_value"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_height" />

        <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
        <ListPreference
            android:defaultValue="Male"
            android:entries="@array/pref_sex_list_titles"
            android:entryValues="@array/pref_sex_list_values"
            android:key="sex_value"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_sex" />
    </PreferenceCategory>

</PreferenceScreen>